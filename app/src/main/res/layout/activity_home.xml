<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="2">

    <!--    Hey user functionalites -->
        <TextView
            android:id="@+id/tv_greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:letterSpacing=".013"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="34dp"
            android:textColor="@color/primary_cyan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgProfile"
                android:layout_gravity="end"
                android:layout_marginRight="25dp"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/profile"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Categories"
                android:textColor="@color/fade_white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:background="@color/fade_white"
                android:backgroundTint="@color/black"
                android:fadeScrollbars="false"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbHorizontal="@android:color/transparent"
                android:scrollbarTrackHorizontal="@android:color/transparent"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">
                    <!--Cover 1-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvTrending"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/trending_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!--Cover 2-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvRap"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/rap_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!--Cover 3-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvHindi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hindi_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!--Cover 4-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvEnglish"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/english_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!--Cover 5-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvPodcasts"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pod_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <!--Cover 6-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:outlineSpotShadowColor="#EE7C7979"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black">

                            <ImageView
                                android:id="@+id/cvPop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/pop_cover" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="See what you are playing"
                    android:textColor="@color/fade_white"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/primary_cyan"
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="10dp"
                    android:outlineSpotShadowColor="#EEEAEAEA"
                    android:outlineAmbientShadowColor="@color/white">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/currentPlaying"
                        android:src="@drawable/audifylogowithname"
                        android:padding="4dp" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvAllSongs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/menu"
                    android:layout_margin="20dp"
                    android:paddingRight="10dp"
                    android:text="All Songs"
                    android:textColor="@color/fade_white"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:background="@drawable/list_bg"
                    android:gravity="center"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>
